@model RCM.Application.ViewModels.ChequeViewModel

<div class="row">
    <div class="col s12">
        <ul class="tabs tabs-fixed-width">
            <li class="tab col s3"><a href="#geral" class="active">Geral</a></li>
            <li class="tab col s3"><a href="#banco">Dados Bancários</a></li>
            <li class="tab col s3"><a href="#vencimento">Emissão/Vencimento</a></li>
            <li class="tab col s3"><a href="#cliente">Cliente</a></li>
            <li class="tab col s3"><a href="#pagamento">Pagamento</a></li>
            <li class="tab col s3"><a href="#funcoes">Funções</a></li>
        </ul>
    </div>

    <div id="geral" class="col s12 m12">
        <p class="px-1 font-bold lead">
            Informação Geral
        </p>
        <div>
            <dl class="detail-list">
                <dt>
                    <label asp-for="@Model.Id"></label>
                </dt>
                <dd>
                    @Model.Id
                </dd>
                <dt>
                    <label asp-for="@Model.NumeroCheque"></label>
                </dt>
                <dd>
                    @Model.NumeroCheque
                </dd>
                <dt>
                    <label asp-for="@Model.Valor"></label>
                </dt>
                <dd>
                    @Model.Valor.ToString("c")
                </dd>
            </dl>
        </div>
    </div>

    <div id="banco" class="col s12 m12">
        <div>
            <p class="px-1 font-bold lead">
                Informações Bancárias do Cheque
            </p>
            <dl class="detail-list">
                <dt>
                    <label asp-for="@Model.Banco"></label>
                </dt>
                <dd>
                    @if (Model.Banco != null)
                    {
                        <a asp-action="Details" asp-controller="Bancos" asp-route-id="@Model.BancoId">
                            @Model.Banco.Nome
                        </a>
                    }
                    else
                    {
                        <span class="font-italic text-warning">
                            <i class="material-icons left">warning</i>
                            Nenhum banco relacionada.
                        </span>
                    }
                </dd>
                <dt>
                    <label asp-for="@Model.Agencia"></label>
                </dt>
                <dd>
                    @Model.Agencia
                </dd>
                <dt>
                    <label asp-for="@Model.Conta"></label>
                </dt>
                <dd>
                    @Model.Conta
                </dd>
            </dl>
        </div>
    </div>

    <div id="vencimento" class="col s12 m12">
        <p class="px-1 font-bold lead">
            Informações sobre Emissão e Vencimento
        </p>
        <dl class="detail-list">
            <dt>
                <label asp-for="@Model.DataEmissao"></label>
            </dt>
            <dd>
                @Model.DataEmissao.ToShortDateString() <span class="font-italic small text-muted">(@Model.DataEmissao.ToLongDateString())</span>
            </dd>
            <dt>
                <label asp-for="@Model.DataVencimento"></label>
            </dt>
            <dd>
                @Model.DataVencimento.ToShortDateString() <span class="font-italic small text-muted">(@Model.DataVencimento.ToLongDateString())</span>
            </dd>
        </dl>
    </div>

    <div id="pagamento" class="col s12 m12">
        <div>
            <p class="px-1 font-bold lead">
                Informação sobre Pagamento do Cheque
            </p>
            <dl class="detail-list">
                <dt>
                    <label asp-for="@Model.DataPagamento"></label>
                </dt>
                <dd>
                    @if (Model.DataPagamento != null)
                    {
                        @Model.DataPagamento?.ToShortDateString() <span class="font-italic small text-muted">(@Model.DataPagamento?.ToLongDateString())</span>
                    }
                    else
                    {
                        <span class="font-italic text-warning">
                            <i class="material-icons left">warning</i>Pagamento ainda não foi efetuado.
                        </span>
                    }
                </dd>
            </dl>
        </div>
    </div>

    <div id="cliente" class="col s12 m12">
        <div>
            <p class="px-1 font-bold lead">
                Informação sobre Responsável pelo Cheque
            </p>
            <dl class="detail-list">
                <dt>
                    <label asp-for="@Model.Cliente"></label>
                </dt>
                <dd>
                    <a asp-action="Details" asp-controller="Clientes" asp-route-id="@Model.ClienteId">
                        @Model.Cliente.Nome
                    </a>
                </dd>
            </dl>
        </div>
    </div>

    <div id="funcoes" class="col s12 m12">
        <div>
            <p class="px-1 font-bold lead">
                Funções básicas
            </p>
            <dl class="detail-list">
                <dt>
                    <label>Pagamento</label>
                </dt>
                <dd>
                    <a asp-action="BloquearCheque" asp-route-id="@Model.Id">Bloquear</a><br />
                    <a asp-action="CompensarCheque" asp-route-id="@Model.Id">Compensar</a><br />
                    <a asp-action="RepassarCheque" asp-route-id="@Model.Id">Repassar</a><br />
                    <a asp-action="DevolverCheque" asp-route-id="@Model.Id">Devolver</a><br />
                    <a asp-action="SustarCheque" asp-route-id="@Model.Id">Sustar</a><br />
                </dd>
            </dl>
        </div>
    </div>
</div>