@model RCM.Application.ViewModels.EmpresaViewModel

<div class="row">
    <div class="col s12">
        <ul class="tabs tabs-fixed-width">
            <li class="tab col s3"><a href="#geral" class="active">Geral</a></li>
            <li class="tab col s3"><a href="#contato">Contato</a></li>
            <li class="tab col s3"><a href="#endereco">Endereço</a></li>
        </ul>
    </div>

    <div id="geral" class="col s12 m12">
        <p class="px-1 font-bold lead">
            Informação Geral
        </p>
        <div>
            @{
                var img = Convert.ToBase64String(Model.Logo);
            }

            <dl class="detail-list">
                <dt>
                    <label asp-for="@Model.Logo"></label>
                </dt>
                <dd>
                    @if (img != string.Empty)
                    {
                        <img src="data:image/png;base64, @img" height="250" class="materialboxed mb-1" />
                        <a asp-action="AttachLogo" class="pt-1">Modificar logomarca</a>
                    }
                    else
                    {
                        <span>Logomarca não adicionada.</span>
                        <a asp-action="AttachLogo">Clique aqui para adicionar</a>
                    }
                </dd>
                <dt>
                    <label asp-for="@Model.Id"></label>
                </dt>
                <dd>
                    @Model.Id
                </dd>
                <dt>
                    <label asp-for="@Model.RazaoSocial"></label>
                </dt>
                <dd>
                    @Model.RazaoSocial
                </dd>
                <dt>
                    <label asp-for="@Model.NomeFantasia"></label>
                </dt>
                <dd>
                    @Model.NomeFantasia
                </dd>
                <dt>
                    <label asp-for="@Model.Descricao"></label>
                </dt>
                <dd>
                    @Model.Descricao
                </dd>

                @Html.DisplayFor(d => d.Documento)
            </dl>
        </div>
    </div>
    <div id="contato" class="col s12 m12">
        @Html.DisplayFor(c => c.Contato)
    </div>
    <div id="endereco" class="col s12 m12">
        @Html.DisplayFor(e => e.Endereco)
    </div>
</div>