@model RCM.Application.ViewModels.ProdutoViewModels.AplicacaoViewModel

<p class="px-1 font-bold lead">
    Informação geral
</p>

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<div class="row">
    <div class="input-field col s12 m6">
        <label asp-for="CarroAno"></label>
        <input asp-for="CarroAno" class="input-field" data-length="4"/>
        <span asp-validation-for="CarroAno" class="text-danger"></span>
    </div>
    <div class="input-field col s12 m6">
        <label asp-for="CarroMarca"></label>
        <input asp-for="CarroMarca" class="input-field" data-length="100" />
        <span asp-validation-for="CarroMarca" class="text-danger"></span>
    </div>
</div>
<div class="row">
    <div class="input-field col s12 m6">
        <label asp-for="CarroModelo"></label>
        <input asp-for="CarroModelo" class="input-field" data-length="250" />
        <span asp-validation-for="CarroModelo" class="text-danger"></span>
    </div>
    <div class="input-field col s12 m6">
        <label asp-for="CarroMotor"></label>
        <input asp-for="CarroMotor" class="input-field" data-length="100" />
        <span asp-validation-for="CarroMotor" class="text-danger"></span>
    </div>
</div>
<div class="row">
    <div class="input-field col s12 m12">
        <label asp-for="Observacao"></label>
        <textarea asp-for="Observacao" class="materialize-textarea" data-length="1000"></textarea>
        <span asp-validation-for="Observacao" class="text-danger"></span>
    </div>
</div>