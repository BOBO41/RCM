@model RCM.Application.ViewModels.ValueObjectViewModels.EnderecoViewModel

<p class="px-1 font-bold lead">
    Informação de Contato
</p>

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<div class="row">
    <div class="input-field col s12 m6">
        <label asp-for="Numero"></label>
        <input asp-for="Numero" class="input-field" data-length="4" />
        <span asp-validation-for="Numero" class="text-danger"></span>
    </div>
    <div class="input-field col s12 m6">
        <label asp-for="Rua"></label>
        <input asp-for="Rua" class="input-field" data-length="100" />
        <span asp-validation-for="Rua" class="text-danger"></span>
    </div>
</div>
<div class="row">
    <div class="input-field col s12 m6">
        <label asp-for="Bairro"></label>
        <input asp-for="Bairro" class="input-field" data-length="25" />
        <span asp-validation-for="Bairro" class="text-danger"></span>
    </div>
    <div class="input-field col s12 m6">
        <label asp-for="Complemento"></label>
        <input asp-for="Complemento" class="input-field" data-length="250" />
        <span asp-validation-for="Complemento" class="text-danger"></span>
    </div>
</div>
<div class="row">
    <div class="input-field col s12 m6">
        <input type="hidden" asp-for="CidadeId" id="cidadeId" />
        <select id="cidadeSelect"></select>
        <label asp-for="CidadeId"></label>
        <span asp-validation-for="CidadeId" class="text-danger"></span>
        <a asp-action="Create" asp-controller="Cidades" target="_blank">Adicionar nova Cidade</a>
    </div>
    <div class="input-field col s12 m6 pt-1">
        <button class="btn-flat mx-0 small" id="reload-fornecedores-button" type="button">
            Recarregar lista
        </button>
    </div>
</div>
<div class="row">
    <div class="input-field col s12 m12">
        <label asp-for="CEP"></label>
        <textarea asp-for="CEP" class="materialize-textarea" data-length="8"></textarea>
        <span asp-validation-for="CEP" class="text-danger"></span>
    </div>
</div>