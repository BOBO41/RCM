@model IEnumerable<RCM.Application.ViewModels.ProdutoViewModel>

@{
    ViewData["Title"] = "Produtos - Índice";
}

<float-action-button controller="Estoque"></float-action-button>

<div class="form-container col s12 m12">
    <form>
        @await Component.InvokeAsync("SearchBar", new Dictionary<string, string>() { { "Nome do Produto", "nome" }, { "Aplicação", "aplicacao" } })

        <div id="advancedSearch" class="col s12 m12">
            <div class="row">
                <div class="input-field col s12 m3">
                    <input name="minValor" type="text" class="input-field" id="minValor" />
                    <label for="minValor">Preço mínimo</label>
                </div>
                <div class="input-field col s12 m3">
                    <input name="maxValor" type="text" class="input-field" id="maxValor" />
                    <label for="maxValor">Preço máximo</label>
                </div>
                <div class="input-field col s12 m3">
                    <input name="minQuantidade" type="text" id="minQuantidade" />
                    <label for="minQuantidade">Quantidade mínima</label>
                </div>
                <div class="input-field col s12 m3">
                    <input name="maxQuantidade" type="text" class="datepicker" id="maxQuantidade" />
                    <label for="maxQuantidade">Quantidade máxima</label>
                </div>
            </div>
        </div>
    </form>

    @if (Model.Any())
    {
        <table class="highlight centered">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Nome)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Aplicacao)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Quantidade)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PrecoVenda)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody class="table-body">
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="d-hidden">
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Aplicacao)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Quantidade)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PrecoVenda)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="px-1 col s12 m12">
            <i class="material-icons left">warning</i>
            Nenhum produto encontrado.
        </p>
    }
</div>