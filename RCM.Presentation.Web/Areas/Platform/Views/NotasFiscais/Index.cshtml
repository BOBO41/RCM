@model IEnumerable<RCM.Application.ViewModels.NotaFiscalViewModel>

@{
    ViewData["Title"] = "Notas Fiscais - Índice";
}

<float-action-button controller="NotasFiscais"></float-action-button>

<div class="form-container col s12 m12">
    <form>
        @await Component.InvokeAsync("SearchBar", new Dictionary<string, string>() { { "Número da Nota Fiscal", "numeroDocumento" } })

        <div class="input-field col s12 m3">
            <input name="minValor" type="text" class="input-field" id="minValor" />
            <label for="minValor">Valor mínimo</label>
        </div>
        <div class="input-field col s12 m3">
            <input name="maxValor" type="text" class="input-field" id="maxValor" />
            <label for="maxValor">Valor máximo</label>
        </div>
    </form>

    @if (Model.Any())
    {
        <table class="highlight centered">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.NumeroDocumento)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DataEmissao)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DataChegada)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Valor)
                    </th>
                </tr>
            </thead>
            <tbody class="table-body">
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="d-hidden">
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NumeroDocumento)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DataEmissao)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DataChegada)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Valor)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="px-1 col s12 m12">
            <i class="material-icons left">warning</i>
            Nenhuma nota fiscal encontrada.
        </p>
    }
</div>