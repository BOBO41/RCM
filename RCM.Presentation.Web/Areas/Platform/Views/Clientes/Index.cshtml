@using RCM.Domain.Models.ClienteModels;

@model IEnumerable<RCM.Application.ViewModels.ClienteViewModel>

@{
    ViewData["Title"] = "Clientes - Índice";
}

<float-action-button controller="Clientes"></float-action-button>

<div class="form-container col s12 m12">
    <form>
        @await Component.InvokeAsync("SearchBar", new Dictionary<string, string>() { { "Nome do Cliente", "nome" } })

        <div id="advancedSearch" class="col s12 m12">
            <div class="row">
                <div class="col s6 m12">
                    <p class="text-muted pt-0 mt-0 small">
                        Sem opções de busca avançada
                    </p>
                </div>
            </div>
        </div>
    </form>

    @if (Model.Any())
    {
        <table class="highlight">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Nome)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Tipo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Documento.CadastroNacional)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Documento.CadastroEstadual)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Contato.Celular)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Contato.TelefoneResidencial)
                    </th>
                </tr>
            </thead>
            <tbody class="table-body">
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="d-hidden">
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nome)
                        </td>
                        <td>
                            @if (item.Tipo == ClienteTipoEnum.PessoaFisica)
                            {
                                @Html.Raw("Pessoa Física")
                            }
                            else
                            {
                                @Html.Raw("Pessoa Jurídica")
                            }
                        </td>
                        <td>
                            @(item.Documento.CadastroNacional ?? "N/A")
                        </td>
                        <td>
                            @(item.Documento.CadastroEstadual ?? "N/A")
                        </td>
                        <td>
                            @(item.Contato.Celular ?? "N/A")
                        </td>
                        <td>
                            @(item.Contato.TelefoneResidencial ?? "N/A")
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="px-1 col s12 m12">
            <i class="material-icons left">warning</i>
            Nenhum cliente encontrado.
        </p>
    }
</div>